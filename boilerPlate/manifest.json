{
  "manifest_version": 3,
  "name": "Webpage Color Changer",
  "version": "1.0",
  "permissions": ["storage"],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "24": "icon16.png",
      "32": "icon16.png"
    },
    "default_title": "Webpage Color Changer",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/"],
      "css": ["style.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
